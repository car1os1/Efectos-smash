<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>website-LVDA</title>
  </head>
  <body>
    <header class="relative">
      <div
        class="absolute left-1/2 -translate-x-1/2 flex flex-col gap-1 justify-center items-center pt-20 top-5"
      >
        <img class="w-40 lg:w-80 h-auto" src="/imgs/super.png" alt="" />
        <h1 class="text-3xl uppercase text-center text-white font-bold">
          Super Smash <span class="text-yellow-300">Blog</span>
        </h1>
      </div>
    </header>

    <main>
      <section
        id="fighters"
        class={`flex justify-between relative [&>div>img]:absolute [&>div>img]:bottom-0 [&>div>img]:w-auto  [&>div>img]:animate-ease-in-out [&>div>img]:animate-duration-1000 h-[40vh] lg:h-screen pt-24 border-b border-white/10 `}
      >
        <div class="relative w-full">
          <img
            class="left-[7%] h-[50%] z-50 m-0 animate-fade-right animate-delay-100"
            src="/imgs/ness.png"
            alt="ness"
          />
          <img
            class="left-[28%] h-[35%] z-40 m-0 pb-8 animate-delay-300 animate-fade-right"
            src="/imgs/kirby.png"
            alt="kirby"
          />
        </div>

        <div class="relative w-full">
          <img
            class="right-[2%] h-[40%] z-40 m-0 animate-delay-100 animate-fade-left"
            src="/imgs/mega-man.png"
            alt="mega-man"
          />
          <img
            class="right-[23%] h-[75%] z-50 m-0 animate-delay-300 animate-fade-left"
            src="/imgs/samus.png"
            alt="samus"
          />
        </div>

        <div
          id="info"
          class="absolute bottom-8 z-50 mx-auto left-1/2 -translate-x-1/2"
        >
          <div class="flex flex-col">
            <div class="px-5 pt-4 pb-2 bg-white text-black text-center">
              <h2 class="font-extrabold text-5xl">1 de AGOSTO</h2>
            </div>
          </div>
          <div class="px-5 pt-2 pb-1 bg-black text-white text-center">
            <a
              class="font-boxing text-[32px] hover:contrast-150 hover:scale-105 inline-block"
              href="https://github.com/car1os1"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="text-purple-100">twitch.tv</span>
              <span
                class="font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-yellow-200"
                >/ car1os</span
              >
            </a>
          </div>

          <div class="px-5 pt-2 pb-1 bg-sky-500 text-black text-center">
            <a
              class="text-2xl font-extrabold hover:contrast-150 hover:scale-105 inline-block text-black"
              href="https://github.com/car1os1"
              target="_blank"
              rel="noopener">Comprar Entradas</a
            >
          </div>
        </div>
      </section>
    </main>

    <footer></footer>
  </body>
</html>

<style is:global>
  body {
    background: #131313;
    margin: 0;
    overflow-x: hidden;
  }

  @font-face {
    font-family: "boxing";
    src: url("/fonts/boxing.ttf");
    font-weight: bold;
  }

  @font-face {
    font-family: "boxing Striped";
    src: url("/fonts/boxing-striped.ttf");
    font-weight: bold;
  }
</style>

<script>
  const $fighters = document.querySelector("#fighters");
  const $fightersImages = $fighters.querySelectorAll("img");

  $fightersImages.forEach(($img) => {
    $img.addEventListener("mouseleave", () => {
      $fightersImages.forEach(($img) => {
        $img.setAttribute("style", "transition:all .3s ease-in-out");
      });
    });
    $img.addEventListener("mouseenter", () => {
      const sectionImages = $img.parentNode.children;
      const position = Array.from(sectionImages).indexOf($img);
      //aqui obtengo las imagenes de los luchadores del lado izquierdo y derecho
      const [leftFighter, rightFighter] = [
        $fightersImages[position], //de la izquierda
        $fightersImages[position + $fightersImages.length / 2], //de la derecha
      ];
      $fightersImages.forEach(($img) => {
        $img.setAttribute(
          "style",
          "filter: blur(2px) grayscale(.8); transition: all 1s ease-in-out"
        );
      });
      leftFighter.setAttribute(
        "style",
        "scale: 1.05 ; contrast:1.1; transition: all .3s ease-in-out"
      );
      rightFighter.setAttribute(
        "style",
        "scale: 1.05 ; contrast:1.1; transition: all .3s ease-in-out"
      );
    });
  });
</script>
